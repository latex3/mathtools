% \begin{macro}{\MH_csym_bigtimes:}
% \changes{v1.07}{2008/08/11}{Added support for \cs{bigtimes}}
%    \begin{macrocode}
\def\MH_bigtimes_scaler:N #1{%
  \vcenter{\hbox{#1$\m@th\mkern-2mu\times\mkern-2mu$}}}
