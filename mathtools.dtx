% And then for some reconfiguration. First a few lengths
% \changes{v1.13}{2012/08/19}{Fixed typos and changed the names}
%    \begin{macrocode}
\newdimen\l_MT_above_intertext_sep
\newdimen\l_MT_below_intertext_sep
